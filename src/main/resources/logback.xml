<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date [%thread] %-5level %logger{80}:[%L] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 时间滚动输出 level为 DEBUG 日志 -->
    <appender name="file—debug"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>../logs/crossd-admin/jinniu-debug.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>../logs/crossd-admin/jinniu-debug.%d{yyyy-MM-dd}.log</FileNamePattern>
            <!-- <MaxHistory>30</MaxHistory>-->
        </rollingPolicy>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{80}:[%L] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 时间滚动输出 level为 ERROR 日志 -->
    <appender name="file—error"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>../logs/crossd-admin/jinniu-error.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY </onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>../logs/crossd-admin/jinniu-error.%d{yyyy-MM-dd}.log</FileNamePattern>
            <!-- <MaxHistory>30</MaxHistory>-->
        </rollingPolicy>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{80}:[%L] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>


    <!-- 异步debug输出 -->
    <appender name ="async-debug" class= "ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志-->
        <discardingThreshold >0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>1024</queueSize>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref ="file—debug"/>
    </appender>
    <appender name ="async-error" class= "ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志-->
        <discardingThreshold >0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>1024</queueSize>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref ="file—error"/>
    </appender>



    <root level="DEBUG">
        <appender-ref ref="stdout"/>
        <appender-ref ref="async-error"/>
        <appender-ref ref="async-debug"/>
    </root>
    <logger name="com.github.pagehelper" level="DEBUG"/>
    <logger name="com.crossd" level="DEBUG"/>
    <logger name="org.mybatis" level="DEBUG"/>
    <logger name="org.mybatis.spring" level="debug"/>
    <logger name="org.springframework" level="debug"/>
</configuration>